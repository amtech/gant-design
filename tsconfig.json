{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "noEmitOnError": false,
    "forceConsistentCasingInFileNames": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@gantd": [
        "packages/gantd/src"
      ],
      "@pkgs": [
        "packages"
      ],
      "@util-g": [
        "packages/util-g/src"
      ],
      "@color-picker": [
        "packages/util-g/src"
      ],
    }
  },
  "include": [
    "packages/**/*",
  ],
  "exclude": [
    "packages/data-cell-g",
    "node_modules",
    "dist",
    "stories"
  ]
}