{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "strict": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": ".",
    "noEmitOnError": false,
    "forceConsistentCasingInFileNames": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "importHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@gantd": [
        "packages/gantd/src"
      ],
      "@packages": [
        "packages"
      ],
      "@util": [
        "packages/util-g/src"
      ],
      "@color-picker": [
        "packages/color-picker-g/src"
      ],
      "@data-cell": [
        "packages/data-cell-g/src"
      ],
      "@header": [
        "packages/header-g/src"
      ],
      "@gantd/*": [
        "packages/gantd/src"
      ],
      "@packages/*": [
        "packages/*"
      ],
      "@util/*": [
        "packages/util-g/src/*"
      ],
      "@color-picker/*": [
        "packages/color-picker-g/src/*"
      ],
      "@data-cell/*": [
        "packages/data-cell-g/src/*"
      ],
    }
  },
  "include": [
    "packages/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "stories"
  ]
}